{
  "name": "pizza-delivery-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5174",
    "dev:frontend": "wait-on http://localhost:3002/api/health && vite --host 0.0.0.0 --port 5174",
    "dev:backend": "cd server && npm start",
    "dev:full": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "start": "npm run dev:full",
    "stop": "npx kill-port 3001 5173",
    "restart": "npm run stop && npm start",
    "build": "tsc && vite build",
    "build:backend": "cd server && npm install",
    "build:full": "npm run build:backend && npm run build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "lucide-react": "^0.263.1",
    "razorpay": "^2.9.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.8.1",
    "socket.io-client": "^4.7.4",
    "wait-on": "^8.0.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "kill-port": "^2.0.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.37.0",
    "vite": "^5.0.8"
  }
}